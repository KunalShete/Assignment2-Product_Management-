@model ProductManagement.Models.ViewModel.AddUserViewModel;

@{
    ViewData["Title"] = "Edit User";
    Layout = "_LayoutAdmin";
}
<div class="container mt-5">

    <h2 style="color:aliceblue">Edit User</h2>

   @* <form method="post">
        
    </form>*@

    <div class="row">
        <div class="col-md-6">
            <form method="post">
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label>Email</label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group mt-4">
                    <button  asp-controller="admin" asp-action="ViewUser" type="submit" class="btn btn-info">Save Changes</button>
                </div>
            </form>
        </div>
    </div>


</div>
