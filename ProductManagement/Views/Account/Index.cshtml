@{
    ViewData["Title"] = "Home Page";
}

<link rel="stylesheet" href="/css/Button.css">

<style>
    .right h1 {
        font-size: 3rem;
        margin-bottom: 20px;
        color: #f6f6f6;
    }

    .right p {
        font-size: 1.5rem;
        margin-bottom: 30px;
        color: #f6f6f6;
    }

    a {
        text-decoration: inherit;
        color: inherit;
        cursor: auto;
    }

    .container {
        display: flex;
        flex-direction: column;
        align-items: center;
        z-index: 20;
    }

    .left img {
        max-width: 100%;
        height: auto;
    }

    .buttons {
        display: flex;
        flex-direction: column;
        gap: 20px;
    }

    @@media screen and (min-width: 768px) {
        .container {
            flex-direction: row;
            justify-content: space-between;
        }

        .left {
            flex-basis: 50%;
        }

        .right {
            flex-basis: 50%;
        }
    }
</style>

<div class="container section">
    <div class="left">
        <div class="image">
            <img src="./Images/undraw_product_iteration_kjok-removebg-preview.png" width="500" alt="image" />
        </div>
    </div>
    <div class="right">
        <h1>Welcome to the Product Management System</h1>
        <p>Effortlessly manage your products, all in one place. Log in or register to get started on your journey.</p>

        <div class="buttons">
            <a href="@Url.Action("Login", "Account")" class="button">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Login
            </a>

            <a href="@Url.Action("Register", "Account")" class="button">
                <span></span>
                <span></span>
                <span></span>
                <span></span>
                Register
            </a>
        </div>
    </div>
</div>
